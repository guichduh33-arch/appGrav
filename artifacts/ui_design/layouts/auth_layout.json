{
  "name": "Auth Layout",
  "type": "centered_card",
  "background": {
    "color": "#F8FAFC",
    "pattern": "subtle_dots"
  },
  "card": {
    "max_width": "400px",
    "padding": "2rem",
    "shadow": "0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1)"
  },
  "regions": {
    "header": {
      "components": [
        "logo",
        "title",
        "subtitle"
      ],
      "align": "center"
    },
    "form": {
      "components": [
        "profile_select",
        "pin_display",
        "numeric_keypad"
      ],
      "spacing": "1.5rem"
    },
    "footer": {
      "components": [
        "login_button",
        "help_text"
      ],
      "align": "center"
    }
  }
}