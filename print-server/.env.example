# ================================
# THE BREAKERY PRINT SERVER CONFIG
# ================================

# Server
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# Security (SEC-007)
PRINT_API_KEY=
CORS_ORIGIN=http://localhost:3000

# ---------------------------------
# RECEIPT PRINTER (USB - Counter)
# ---------------------------------
RECEIPT_PRINTER_TYPE=mock
# For USB: RECEIPT_PRINTER_TYPE=usb
# RECEIPT_PRINTER_VID=0x04b8
# RECEIPT_PRINTER_PID=0x0202
# For Network: RECEIPT_PRINTER_TYPE=network
# RECEIPT_PRINTER_IP=192.168.1.51
# RECEIPT_PRINTER_PORT=9100

# ---------------------------------
# BARISTA PRINTER (Network)
# ---------------------------------
BARISTA_PRINTER_TYPE=mock
# BARISTA_PRINTER_TYPE=network
BARISTA_PRINTER_IP=192.168.1.52
BARISTA_PRINTER_PORT=9100

# ---------------------------------
# KITCHEN PRINTER (Network)
# ---------------------------------
KITCHEN_PRINTER_TYPE=mock
# KITCHEN_PRINTER_TYPE=network
KITCHEN_PRINTER_IP=192.168.1.53
KITCHEN_PRINTER_PORT=9100

# ---------------------------------
# DISPLAY PRINTER (Network)
# ---------------------------------
DISPLAY_PRINTER_TYPE=mock
# DISPLAY_PRINTER_TYPE=network
DISPLAY_PRINTER_IP=192.168.1.54
DISPLAY_PRINTER_PORT=9100

# ---------------------------------
# FEATURES
# ---------------------------------
ENABLE_CASH_DRAWER=true
ENABLE_BUZZER=true
PRINT_LOGO=false

# ---------------------------------
# QUEUE (optional Redis for Bull)
# ---------------------------------
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=2000
# REDIS_HOST=127.0.0.1
# REDIS_PORT=6379

# ---------------------------------
# LOGGING
# ---------------------------------
LOG_LEVEL=debug
LOG_DIR=./logs
