# syntax=docker/dockerfile:1

# Development stage with hot reload
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies
RUN npm ci && npm cache clean --force

# Copy source code
COPY src ./src

# Expose port
EXPOSE 3001

# Start with nodemon for hot reload
CMD ["npm", "run", "dev"]
